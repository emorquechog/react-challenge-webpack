{
    "extends": ["react-app", "airbnb", "prettier", "prettier/react"],
    "plugins": ["jsx-a11y", "prettier"],
    "rules": {
      "no-unused-vars": "off",
      "semi": 0,
      "react/jsx-filename-extension": [
        1,
        { "extensions": [".js", ".jsx", ".ts", ".tsx"] }
      ],
      "react/prop-types": "off",
      "prettier/prettier": [
        "error",
        {
          "semi": false
        }
      ],
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "js": "never",
          "jsx": "never",
          "ts": "never",
          "tsx": "never",
          "mjs": "never"
        }
      ]
    },
    "settings": {
      "import/resolver": {
        "node": {
          "paths": [".", "src"],
          "extensions": [".js", ".jsx", ".ts", ".tsx"]
        }
      }
    }
  }
  